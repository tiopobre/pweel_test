<!-- Contenido -->
<div class="container">
    <div class="row mt-3 mb-5 mx-5">
        <!-- Breadcrumb -->
        <div class="col-12 pl-0">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb arr-right">
                    <li class="breadcrumb-item" aria-current="page"><strong>Mis vacante</strong></li>
                    <li class="breadcrumb-item active" aria-current="page" id="num-vacante"><strong>Vacante No.
                            {{la_puta_id}}</strong></li>
                </ol>
            </nav>
        </div>
        <!-- Content -->

        <!--- Titulo de la página --->
        <div class=" titulo col-12 mb-3 px-3 py-2" id="titulo_vacante">
            <div class="flex-row row justify-content-between align-items-center px-4">
                <i class='fas fa-user-tie' style='font-size:24px'></i>
                <h4>Vacante para {{nombre_cargo}}</h4>
                <button type="button" class="btn btn-outline-secondary" id="btn_config_user"><i class="fa fa-gear"
                        style="font-size:25px; color:#ff7011"></i></button>
            </div>
        </div>
        <div class="vl mx-3 d-lg-none d-none d-lg-block d-xl-block"></div>
        <!--- Formulario --->
        <div class="col-lg-12 col-md-12 ml-md-0 ml-lg-3 p-0" style="background: rgb(250,250,250)">
            <!-- Avatar -->
            <div class="list-group filter-wrap">
                <!-- Info Empleador -->
                <article class="list-group-item p-0">
                    <header
                        class="filter-header d-flex justify-content-start align-items-center px-3 py-1 border border-light rounded-top border-right-0 border-left-0 border-top-0">
                        <i class='far fa-address-card' style='font-size:24px'></i>
                        <p class="title mb-0 ml-2 h6">Informacion Empleador</p>
                        <button type="button" data-toggle="collapse" data-target="#collapse1" aria-expanded="true"
                            class="btn btn-outline-secondary px-1 py-1 ml-auto" id="btn_edit_pers_info"><i
                                class="material-icons">edit</i></button>
                    </header>
                    <div class="filter-content p-4 collapse show" id="collapse1">
                        <small class="text-muted">Nombre </small>
                        <h4 id="#fullname">Daniel Alejandro Srrano</h4>
                        <small class="text-muted">Teléfono de contacto</small>
                        <h4 id="cel">+57 3355335</h4>
                        <small class="text-muted">e-mail</small>
                        <h4 id="cel">danil.swrano@email.com</h4>
                    </div>

                </article>
                <!-- Info cargo -->
                <article class="list-group-item p-0">
                    <header class="filter-header d-flex justify-content-start align-items-center px-3 py-1 ">
                        <i class='far fa-id-badge' style='font-size:24px'></i>
                        <p class="title mb-0 ml-3 h6">Informacion Cargo</p>
                    </header>
                    
                    <div class="filter-header" >
                        <form action="/crear_vacante" class="formulario1" method="post">
                            <!-- Lugar_form  -->
                            <div class="form-group w-75 mt-3 mb-2">
                                <label for="nombre">Nombre del cargo <small class="text-muted">El que tipo de cargo buscas</small></label>
                                <input type="text" class="form-control" name="nombre" id="nombre">
                            </div>
                            <!-- descripcion_form  -->
                            <div class="form-group mt-3 mb-2">
                                <label for="descripcion_vac">Describe brevemente el cargo :</label>
                                <textarea class="form-control noresize h-25" id="descripcion_vac" name="descripcion_vac"></textarea>
                            </div>
                            <!-- Lugar_form  -->
                            <div class="form-group w-75 mt-3 mb-2">
                                <label for="lugar_form">Lugar <small class="text-muted">(sitio dinde se realiza la
                                        tarea)</small></label>
                                <input type="text" class="form-control" name="lugar_form" id="lugar_form">
                            </div>
                            <!-- fecha_form  -->
                            <div class="form-group w-75 mt-3 mb-2">
                                <label for="fecha_form">Fecha <small class="text-muted">(fecha en la que se realiza la
                                        tarea)</small></label>
                                <input type="date" class="form-control" name="fecha_form" id="fecha_form" value="0">
                            </div>
                            <!-- duracion_form  -->
                            <div class="form-group w-75 mt-3 mb-2">
                                <label for="duracion_form">duracion <small class="text-muted">horas (tiempo que se desempeñara el
                                        cargo)</small></label>
                                <input type="number" class="form-control" name="duracion_form" id="duracion_form" value="0">
                            </div>
                            <!-- duracion_form  -->
                            <div class="form-group w-75 mt-3 mb-2">
                                <label for="pagus">Pago <small class="text-muted">(Cuanto se le pagara al postulante)</small></label>
                                <input type="number" class="form-control" name="pagus" id="pagus" value="0">
                            </div>
                            <!-- postulantes_form  -->
                            <div class="form-group w-75 mt-3 mb-2">
                                <label for="num_postulantes_form">No. vacantes <small class="text-muted">(numero de vacantes para el
                                        cargo)</small></label>
                                <input type="number" class="form-control" name="num_postulantes_form" id="num_postulantes_form" value="0">
                            </div>
                            <!-- postulantes_form  -->
                            <div class="form-group w-75 mt-3 mb-2">
                                <label for="express">¿Será express? <small class="text-muted">(se requiere de urgencia)</small></label>
                                <div class="btn-group" data-toggle="buttons">
                                    <label class="btn btn-primary">
                                        <input type="radio" name="express" id="express_t">Si
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="express" id="express_f">No
                                    </label>
                                </div>
                            </div>
                            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                            <button type="submit" data-toggle="collapse" data-target="#collapse2" aria-expanded="true"
                                class="btn btn-warning mt-3 d-flex" id="btn_completar_pers_info"><i
                                    class='far fa-save mr-2' style='font-size:24px'></i><strong>Guardar
                                    información</strong></button>
                        </form>
                    </div>
                </article>
            </div>
        </div>
    </div>
</div>
<!---- Formulario ---->
<div class="container">
    <div class="row">
        <div class=" columna col-12 col-md-10 col-lg-8 mb-3 pr-5 pl-5 py-4 rounded-bottom offset-md-1 offset-lg-2">
            <div class="container-fluid">
                <div class="row">
                    <div class="card col-12">
                        <div class="card-body">
                            <p class="mb-0">
                                <label for="id_vacante"><small class="text-muted">{{id}}</small></label>
                                <span class="float-right"><i class="text-warning fa fa-star ml-2" style="font-size:20px"></i></span>
                                <span class="float-right"><i class="text-warning fa fa-star ml-2" style="font-size:20px"></i></span>
                                <span class="float-right"><i class="text-warning fa fa-star ml-2" style="font-size:20px"></i></span>
                                <span class="float-right"><i class="text-warning fa fa-star ml-2" style="font-size:20px"></i></span>
                                <span class="float-right"><i class="text-warning fa fa-star ml-2" style="font-size:20px"></i></span>
                            </p>
                            <h3 class="card-title">{{Cargo}}</h3>
                            <h6 class="card-subtitle mb-0 text-muted"><strong>Ubicación:</strong><label id="lugar_vacante"
                                    class="ml-2">{{Lugar}}</label></h6>
                            <h6 class="card-subtitle mb-2 text-muted"><strong>Publicado:</strong><label id="fecha_publicacion_vacante"
                                    class="ml-2">{{Fecha_pub}}</label></h6>
                            
                            <small class="text-muted">
                                <label for="descripción_vacante" id="descripción_vacante">
                                    {{descripcion}}
                                </label>
                            </small>
                            <h6 class="card-subtitle py-2 mb-2 text-muted"><strong>Duración:</strong><label id="duracion_vacante"
                                    class="ml-2">{{Tiempo}}</label></h6>
                            <h5 class="text-muted">¿Seguro deseas aplicar?</h5>
                            <form action="/ver_vacante" method="post">
                                <input type="hidden" name="thisid" value="{{ id }}">
                                <button class="btn btn-warning mb-4 ml-auto" id="btn_cambiar_contrasena" type="submit">
                                    <strong>Si, Aplicar</strong>
                                </button>
                            </form>
                            <a href="/trabajos">
                            <button class="btn btn-danger ml-auto" id="btn_cambiar_contrasena" style="margin-bottom: 180px;">
                                <strong>No, Cancelar</strong>
                            </button>
                            </a>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>